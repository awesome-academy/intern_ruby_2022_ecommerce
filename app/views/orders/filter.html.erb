<div class="sorting">
  <%= form_tag filter_orders_path, method: :get do %>
    <div class="wrapper">
      <div class="second-third">
        <%= select_tag :filter , options_for_select([
                  t("static_pages.all") ,
                  t("static_pages.pending") ,
                  t("static_pages.shipping") ,
                  t("static_pages.delivered") ,
                  t("static_pages.rejected") ,
                  t("static_pages.canceled") ]), class: "form-select form-select" %>
      </div>
      <div class="third-third">
        <%= submit_tag  t("static_pages.filter"), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <div class="clearfix"></div>
</div>
<table class="table table-bordered mt-6">
  <thead>
    <tr>
      <th scope="col"><%= t"static_pages.order_id" %></th>
      <th scope="col"><%= t"static_pages.amount" %></th>
      <th scope="col"><%= t"static_pages.status" %></th>
      <th scope="col"><%= t"static_pages.action" %></th>
    </tr>
  </thead>
<%= render @orders %>
</table>
<%== pagy_bootstrap_nav(@pagy) %>
